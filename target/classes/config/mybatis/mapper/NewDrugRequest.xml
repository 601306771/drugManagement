<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="silver.api.newDrugRequest.mapper.NewDrugRequestMapper" >
  <resultMap id="rMap" type="silver.api.newDrugRequest.entity.NewDrugRequestEntity" >
    <id property="id" column="id" jdbcType="BIGINT" />
    <result property="tdtType" column="TDTTYPE" jdbcType="VARCHAR" />
    <result property="ddtType" column="DDTTYPE" jdbcType="VARCHAR" />
    <result property="dName" column="DNAME" jdbcType="INTEGER" />
    <result property="dIntroduce" column="DINTRODUCE" jdbcType="INTEGER" />
    <result property="ndrReason" column="NDRREASON" jdbcType="INTEGER" />
    <result property="ndrStatus" column="NDRSTATUS" jdbcType="INTEGER" />
  </resultMap>
  
  
 <select id="selectByStatus" resultMap="rMap" parameterType="String">
		SELECT 
			id,
			TDTTYPE,
			DDTTYPE,
			DNAME,
			DINTRODUCE,
			NDRREASON,
			NDRSTATUS
		FROM NEWDURGREQUEST
		WHERE NDRSTATUS = #{status}
	</select> 
  
</mapper>